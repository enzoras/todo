
<div class="row">
  <div class='col-md-6 col-md-offset-3'>
    <% if params[:plan] == '2' %>
      <h1 class="text-center">Pro Account</h1>
      <h4>Sign up to be a pro for $10:  get access to community & contacts!</h4>
    <% else %>
      <h1 class="text-center">Basic Account</h1>
      <h4>Sign up for free to get access to the cummunity!</h4>
    <% end %>
  </div>
  <div class="col-md-6 col-md-offset-3">
    <div class="well">
      <h2>Sign up</h2>
      <% if params[:plan] == '2' %>
        <%= render "pro_form" %>
      <% else %>
        <%= render "basic_form" %>
      <% end %>
    
      <%= render "devise/shared/links" %>
    </div>
  </div>  
</div>